<div class="row container-fluid">
  <% @articles.each do |article| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="jumbotron LightGoldenrodYellow">
        <h1 class="text-center"><%= link_to article.title, article %></h1>
        <p class="text-center"><%= article.body %></p>
        <%= link_to "Edit", edit_article_path(article), class: "btn btn-warning" %>
        <%= link_to "Delete", article, method: :delete, data: {confirm: "Are you sure to delete this article?"},
            class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>